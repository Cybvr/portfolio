
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule for all collections - allow read/write if authenticated
    match /{collection}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Portfolio collection - allow public read AND write access
    match /portfolio/{portfolioId} {
      allow read: if true;
      allow write: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    // JPPortfolio collection - allow public read access
    match /jpportfolio/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Documents collection for file management
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
  }
}
